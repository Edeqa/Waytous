<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_margin="0dp"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/fab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:animateLayoutChanges="true"
        app:layout_behavior=".helpers.LinearLayoutCompatBehavior">

        <android.support.v7.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:id="@+id/fab_buttons"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right">

            <android.support.v7.widget.LinearLayoutCompat
                style="@style/FabLayoutStyle"
                android:id="@+id/fab_navigate">

                <TextView
                    android:id="@+id/tv_fab_navigate"
                    style="@style/FabTextStyle"
                    android:text="Navigate" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_navigate"
                    app:srcCompat="@drawable/ic_share_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_fit_to_screen"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_fit_to_screen"
                    style="@style/FabTextStyle"
                    android:text="Fit to screen" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_fit_to_screen"
                    app:srcCompat="@drawable/ic_fullscreen_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_new_message"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_new_message"
                    style="@style/FabTextStyle"
                    android:text="New message" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_new_message"
                    app:srcCompat="@drawable/ic_chat_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_send_link"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_send_link"
                    style="@style/FabTextStyle"
                    android:text="Share link" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/iv_fab_send_link"
                    style="@style/FabButtonStyle"
                    app:srcCompat="@drawable/ic_share_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_stop_tracking"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_stop_tracking"
                    style="@style/FabTextStyle"
                    android:text="Stop tracking" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_stop_tracking"
                    app:srcCompat="@drawable/ic_clear_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_cancel_tracking"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_cancel_tracking"
                    style="@style/FabTextStyle"
                    android:text="Cancel tracking" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_cancel_tracking"
                    app:srcCompat="@drawable/ic_clear_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_split_screen"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_split_screen"
                    style="@style/FabTextStyle"
                    android:text="Split screen" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_split_screen"
                    app:srcCompat="@drawable/ic_view_agenda_black_24dp" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/fab_share_to_facebook"
                style="@style/FabLayoutStyle">

                <TextView
                    android:id="@+id/tv_fab_share_to_facebook"
                    style="@style/FabTextStyle"
                    android:text="Share to Facebook" />

                <android.support.design.widget.FloatingActionButton
                    style="@style/FabButtonStyle"
                    android:id="@+id/iv_fab_share_to_facebook"
                    app:srcCompat="@drawable/ic_facebook_white" />
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/white"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_gravity="right" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.design.widget.CoordinatorLayout>
