<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="80dp"
    android:id="@+id/layout_gps_status"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@android:drawable/screen_background_light_transparent"
            android:gravity="center_horizontal">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_info_outline_black_24dp"
                android:id="@+id/info"
                android:background="@android:color/transparent" />

            <TextView
                android:text="Total:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:textAlignment="center"
                android:foregroundGravity="center_horizontal"
                android:textColor="?attr/buttonTextColor"
                android:gravity="center_horizontal" />

            <TextView
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total"
                tools:text="15"
                android:textAlignment="center"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Active:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/active"
                tools:text="5"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />

            <TextView
                android:text="Fix:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:gravity="center_horizontal" />

            <TextView
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fix"
                tools:text="2"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:textColor="#0000FF" />

            <TextView
                android:text="MaxSNR:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:paddingTop="8dp"
                android:textSize="10sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/max_snr"
                tools:text="35.0"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:text="-" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/screen_background_light_transparent"
            android:id="@+id/layout_nmea_info"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:text="SNR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="10sp"
                android:layout_centerInParent="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:text=" - signal to noise ratio, dB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_height="wrap_content"
                android:id="@+id/layout11">

                <TextView
                    android:text="&gt;40 dB - excellent signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textSize="10sp"
                    android:layout_weight="1" />

                <TextView
                    android:text="25-40 dB - very good signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="10sp"
                    android:layout_weight="1" />

                <TextView
                    android:text="15-25 dB - low signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="10sp"
                    android:layout_weight="1" />

                <TextView
                    android:text="10-15 dB - very low signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="10sp"
                    android:layout_weight="1" />

                <TextView
                    android:text="&lt;10 dB - no signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="10sp"
                    android:layout_weight="1" />

                <TextView
                    android:text="1-32 - GPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:paddingTop="8dp" />

                <TextView
                    android:text="33-64 - SBAS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:textSize="10sp" />

                <TextView
                    android:text="65-96 - GLONASS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:textSize="10sp" />

                <TextView
                    android:text="193-200 - QZSS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    android:textSize="10sp" />

                <TextView
                    android:text="201-235 - Beidou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:layout_weight="1"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:text="PRN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="10sp"
                android:layout_centerHorizontal="false"
                android:textStyle="normal|bold"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/layout11" />

            <TextView
                android:text=" - satellite number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout12"
                android:layout_below="@+id/textView4"
                android:layout_toRightOf="@+id/textView4">

                <TextView
                    android:text=" - "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textSize="10sp" />

                <TextView
                    android:text="active "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="fix "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textSize="10sp"
                    android:textColor="#0000FF"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progressBar"
                android:layout_centerInParent="false"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:minHeight="50dp"
                android:max="35"
                android:progress="35"
                android:progressDrawable="@drawable/progress_vertical"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_above="@+id/textView4"
                android:layout_below="@+id/textView2" />

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout_satellites">
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>