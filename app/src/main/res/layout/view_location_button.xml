<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    style="@style/Widget.AppCompat.Button.Small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/semi_transparent_background"
    android:maxHeight="@android:dimen/app_icon_size"
    android:minHeight="@android:dimen/app_icon_size"
    android:minWidth="@android:dimen/app_icon_size"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_pin_drop_black_24dp"
        android:id="@+id/iv_button_person"
        android:tint="?attr/buttonTextColor"
        android:layout_weight="1" />

    <TextView
        tools:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_button_username"
        android:textColor="?attr/buttonTextColor"
        android:maxLines="1"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:typeface="sans"
        android:layout_weight="1" />

</LinearLayout>